                                        Swal.fire({
                                            title: 'Payment Successful!',
                                            html:
                                                '<p><strong>Amount Paid:</strong>' + amountPaid + '</p>' +
                                                '<p><strong>New Balance:</strong> ' + newBalance + '</p>',
                                            icon: 'success',
                                            showConfirmButton: true,
                                            confirmButtonText: 'Close',
                                            customClass: {
                                                container: 'my-swal'
                                            }
                                        }).then((result) => {
                                            if (result.isConfirmed) {
