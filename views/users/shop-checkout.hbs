<script>
    function toggleDiv() {
        var x = document.getElementById("add-address-div");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }

    const validatePlaceOrder = () => {
        const addressRadios = document.getElementsByName('deliveryAddress');
        let addressSelected = false;
        for (let i = 0; i < addressRadios.length; i++) {
            if (addressRadios[i].checked) {
                addressSelected = true;
                break;
            }
        }
        if (!addressSelected) {
            // Use SweetAlert to show a popup alert
            Swal.fire("Oops!", "Please select an address.", "error");
            return false;
        }

        const paymentRadios = document.getElementsByName('payment_method');
        let paymentSelected = false;
        for (let i = 0; i < paymentRadios.length; i++) {
            if (paymentRadios[i].checked) {
                paymentSelected = true;
                break;
            }
        }
        if (!paymentSelected) {
            // Use SweetAlert to show a popup alert
            Swal.fire("Oops!", "Please select a payment method.", "error");
            return false;
        }

        // Validation passed, allow form submission
        return true;
    }
</script>
