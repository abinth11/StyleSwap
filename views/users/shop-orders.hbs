<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">Home</a>
                <span></span> Shop
                <span></span> Wishlist
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table  shopping-summery text-center">
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                <tr>
                                    <td class="image product-thumbnail"><img src="/images/{{product._id}}.jpg" alt="#">
                                    </td>
                                    <td class="product-des product-name">
                                        <h5 class="product-name"><a
                                                href="shop-product-right.html">{{product.product_title}}
                                            </a></h5>
                                        <p class="font-xs">{{product.product_description}}</p>
                                    </td>
                                    <td class="price" data-title="Price"><span>${{product.product_price}}</span>
                                    </td>
                                    {{#if (eq status "placed")}}
                                    <td><span class="badge rounded-pill alert-success">Placed</span></td>
                                    {{else if (eq status "pending")}}
                                    <td><span class="badge rounded-pill alert-warning">Pending</span></td>
                                    {{else if (eq status "cancelled")}}
                                    <td><span class="badge rounded-pill alert-danger">Canceled</span></td>
                                    {{else if (eq status "confirmed")}}
                                    <td><span class="badge rounded-pill alert-warning">Confirmed</span></td>
                                    {{else if (eq status "shipped")}}
                                    <td><span class="badge rounded-pill alert-primary">Shipped</span></td>
                                    {{else if (eq status "delivery")}}
                                    <td><span class="badge rounded-pill alert-info">Delivery</span></td>
                                    {{else if (eq status "completed")}}
                                    <td><span class="badge rounded-pill alert-secondary">Completed</span></td>
                                    {{/if}}

                                    <td>
                                        <div>
                                            {{#or (eq status "placed") (eq status "pending")}}

                                            <button style="background-color: red;border:none"
                                                onclick="cancellOrder('{{_id}}')" class="btn btn-danger btn-sm">Cancell
                                            </button>
                                            <a href="/track-order/{{_id}}" class="btn btn-danger btn-sm">Track
                                            </a>
                                            {{else}}
                                            <button style="background-color:#FFCA2C;border: none;"
                                                class="btn btn-sm text-dark">Contact
                                            </button>
                                            <a href="/track-order/{{_id}}" class="btn btn-danger btn-sm">Track
                                            </a>
                                            {{/or}}

                                        </div>


                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>

