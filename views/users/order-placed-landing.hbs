{{>head-user}}
{{>user-header}}
<style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    body {
      font-family: 'Helvetica Neue', sans-serif;
      background-color: #f9f9f9;
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px 20px;
      text-align: center;
    }
    .header {
      font-size: 30px;
      font-weight: bold;
      margin-bottom: 40px;
      color: #2c3e50;
    }
    .content {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 40px;
      margin-bottom: 60px;
    }
    .button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background-color: #2c3e50;
      color: #fff;
      font-size: 20px;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 2px;
      padding: 20px 40px;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .button:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }
    .button span {
      margin-left: 10px;
    }
    .button i {
      font-size: 24px;
      margin-right: 10px;
    }
    .orders-button {
      background-color: #27ae60;
    }
    .orders-button:hover {
      background-color: #219e54;
    }
    .continue-button {
      background-color: #e74c3c;
    }
    .continue-button:hover {
      background-color: #d43b2f;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      Thank you for your order!
    </div>
    <div class="content">
      <div>
        <div class="button orders-button">
          <i class="fas fa-shopping-bag"></i>
          <span>View Orders</span>
        </div>
      </div>
      <div>
        <div class="button continue-button">
          <i class="fas fa-shopping-cart"></i>
          <span>Continue Shopping</span>
        </div>
      </div>
    </div>
  </div>

